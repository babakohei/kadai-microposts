<div class="col-xs-2">
  <% if current_user.ilike?(micropost) %>
    <%= form_for(current_user.likes.find_by(micropost_id: micropost.id), html: { method: :delete}) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'Unlike', class: 'btn btn-danger btn-block btn-xs' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.likes.build) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'Like', class:'btn btn-primary btn-block btn-xs' %>
    <% end %>
  <% end %>
</div>